@page
@model AdicionarModel
@{
    ViewData["Title"] = "Adicionar";
}

<div class="text-center">
    <h1 class="display-4">Adicionar Novo Agendamento:</h1>
    
    <form method="post">
        <p>Nome:</p>
        <input type="text" name="nome" />

        <p>Telefone:</p>
        <input type="text" name="telefone" />

        <p>Data:</p>
        <input type="date" name="dataAgendamento" />
        
        <p>Observações:</p>
        <input type="text" name="observacoes" />

        <div class="botao-div">
            <button type="submit">Adicionar</button>
        </div>

    </form>

</div>
