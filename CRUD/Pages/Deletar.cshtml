@page
@model DeletarModel
@{
    ViewData["Title"] = "Deletar";
}

<div class="text-center">
    <h1 class="display-4">Tem certeza que deseja excluir este agendamento:</h1>
    
    <form method="post">
        <p>Nome:</p>
        <input type="text" name="nome" asp-for="Agendamento.Nome" />

        <p>Telefone:</p>
        <input type="text" name="telefone" asp-for="Agendamento.Telefone" />

        <p>Data:</p>
        <input type="date" name="dataAgendamento" asp-for="Agendamento.DataAgendamento" />
        
        <p>Observações:</p>
        <input type="text" name="observacoes" asp-for="Agendamento.Observacoes" />

        <div class="botao-div">
            <button type="submit" class="botao">Excluir</button>

            <a asp-page="/Visualizar" class="botao">Cancelar</a>
        </div>
    </form>

</div>
