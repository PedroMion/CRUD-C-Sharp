@page
@model EditarModel
@{
    ViewData["Title"] = "Editar";
}

<div class="text-center">
    <h1 class="display-4">Editar Agendamento:</h1>
    
    <form method="post">
        <p>Nome:</p>
        <input type="text" name="nome" asp-for="AgendamentoEditado.Nome" />

        <p>Telefone:</p>
        <input type="text" name="telefone" asp-for="AgendamentoEditado.Telefone" />

        <p>Data:</p>
        <input type="date" name="dataAgendamento" asp-for="AgendamentoEditado.DataAgendamento" />
        
        <p>Observações:</p>
        <input type="text" name="observacoes" asp-for="AgendamentoEditado.Observacoes" />

        <button type="submit">Editar</button>

    </form>

</div>
